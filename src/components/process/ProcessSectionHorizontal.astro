---
import ProcessStep from "./ProcessStepHorizontal.astro";

interface ProcessStep {
	title: string;
	description: string;
	icon: string;
}

const processSteps: ProcessStep[] = [
	{
		title: "Gap Analysis",
		description: "Finding the gap between your service and delivery",
		icon: "tabler/message-dots",
	},
	{
		title: "Develop & Propose",
		description: "Developing the solution and formally proposing it",
		icon: "tabler/clipboard",
	},
	{
		title: "Delivery & Implementation",
		description: "Covers the project execution, including implementation, launch, and initial support",
		icon: "tabler/photo",
	},
	{
		title: "Review & Refine",
		description: "Ongoing support to ensure the solution works, making adjustments as needed, and measuring success",
		icon: "tabler/bolt",
	},
];
---

<section class="bg-base-100 dark:bg-background text-foreground py-16 md:py-32">
	<div class="site-container mx-auto px-4">
		<div class="mx-auto mb-16 max-w-3xl text-center">
			<h2 class="h2 mb-4">My Consulting Model</h2>
			<p class="description text-xl">A trusted process for delivering exceptional results</p>
		</div>

		<div class="relative">
			<!-- Process Steps -->
			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
				{
					processSteps.map((step, index) => (
						<ProcessStep
							number={index + 1}
							title={step.title}
							description={step.description}
							icon={step.icon}
						/>
					))
				}
			</div>

			<!-- Connecting Lines (visible on larger screens) -->
			<div
				class="from-primary/0 via-primary/20 to-primary/0 absolute top-[6.5rem] left-0 z-0 hidden h-0.5 w-full bg-gradient-to-r lg:block"
			>
			</div>
		</div>
	</div>
</section>
